<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
  <!-- For your own domain (change to your hostname) -->
  <domain-config cleartextTrafficPermitted="false">
    <domain includeSubdomains="true">ws10.csie.ntu.edu.tw</domain>
    <trust-anchors>
      <!-- Reference your CA certificate -->
      <certificates src="@raw/townpass" />
      <!-- Also keep system CAs -->
      <certificates src="system" />
    </trust-anchors>
  </domain-config>
</network-security-config>
